{
  "openapi": "3.0.0",
  "info": {
    "title": "My API",
    "version": "1.0.0",
    "description": "My API description"
  },
  "tags": [
    {
      "name": "Users"
    },
    {
      "name": "Posts"
    }
  ],
  "components": {
    "securitySchemes": {
      "BearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "User": {
        "$ref": "#/definitions/User"
      },
      "getUserList": {
        "$ref": "#/definitions/getUserList"
      }
    }
  },
  "security": [
    {
      "BearerAuth": []
    }
  ],
  "schemes": ["http"],
  "consumes": ["application/json"],
  "produces": ["application/json"],
  "paths": {
    "/api/user/createUser": {
      "post": {
        "security": [{ "BearerAuth": [] }],
        "tags": ["Users"],
        "summary": "Create new user in system",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/definitions/createUser"
              }
            }
          }
        },
        "produces": ["application/json"],
        "responses": {
          "201": {
            "description": {},
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/definitions/SuccessResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/user/getUserList": {
      "get": {
        "security": [{ "BearerAuth": [] }],
        "tags": ["Users"],
        "summary": "Get a list of users in system",
        "parameters": [
          {
            "name": "size",
            "in": "query",
            "description": "Size of a list of users in system",
            "schema":{
              "type":"number"
            }
          },
          {
            "name": "currentPage",
            "in": "query",
            "description": "Position of page reveals a list of users in system",
            "schema":{
              "type":"number"
            }
          },
          {
            "name": "roleName",
            "in": "query",
            "description": "Filter based on role name",
            "schema":{
              "type":"string"
            }
          },
          {
            "name": "status",
            "in": "query",
            "description": "Filter based on status",
            "schema":{
              "type":"string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/definitions/getUserList"
                }
              }
            }
          }
        }
      }
    },
    "/api/user/login": {
      "post": {
        "tags": ["Users"],
        "summary": "Login user into system and return a token",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                  "$ref":"#/definitions/login"
                }
            }
          }
        },
        "produces": ["application/json"],
        "responses": {
          "201": {
            "content": {
              "application/json": {
                "schema": {
                  "properties": {
                    "token": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/post/createPost": {
      "post": {
        "security": [{ "BearerAuth": [] }],
        "tags": ["Posts"],
        "summary": "Create new post in system",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/definitions/createPost"
              }
            }
          }
        },
        "produces": ["application/json"],
        "responses": {
          "201": {
            "description": {
              "message": "Create post successfully!",
              "code": 201
            },
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/definitions/SuccessResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/post/updatePost": {
      "patch": {
        "security": [{ "BearerAuth": [] }],
        "tags": ["Posts"],
        "summary": "Update an existed post in system",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/definitions/updatePost"
              }
            }
          }
        },
        "produces": ["application/json"],
        "responses": {
          "201": {
            "description": {
              "message": "Update post successfully!",
              "code": 201
            },
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/definitions/SuccessResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/post/getPostList": {
      "get": {
        "security": [{ "BearerAuth": [] }],
        "tags": ["Posts"],
        "summary": "Get a list of posts in system",
        "parameters": [
          {
            "name": "size",
            "in": "query",
            "description": "Size of a list of posts in system",
            "schema":{
              "type":"number"
            }
          },
          {
            "name": "currentPage",
            "in": "query",
            "description": "Position of page reveals a list of posts in system",
            "schema":{
              "type":"number"
            }
          },
          {
            "name": "status",
            "in": "query",
            "description": "Filter based on status",
            "schema":{
              "type":"string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/definitions/getPostList"
                }
              }
            }
          }
        }
      }
    }
  },
  "definitions": {
    "User": {
      "properties": {
        "id": {
          "type": "number",
          "uniqueItems": true
        },
        "username": {
          "type": "string"
        },
        "roleName": {
          "type": "string"
        },
        "createdAt": {
          "type": "string"
        },
        "updatedAt": {
          "type": "string"
        },
        "status": {
          "type": "number"
        },
        "posts": {
          "type": "array",
          "default": []
        }
      }
    },
    "createUser": {
      "properties": {
        "username": {
          "type": "string"
        },
        "password": {
          "type": "string"
        },
        "roleName": {
          "type": "string"
        }
      }
    },
    "getUserList": {
      "properties": {
        "items": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/User"
          }
        },
        "size": {
          "type": "number"
        },
        "currentPage": {
          "type": "number"
        },
        "total": {
          "type": "number"
        }
      }
    },
    "Post": {
      "properties": {
        "id": {
          "type": "string",
          "uniqueItems": true
        },
        "title": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "status": {
          "type": "string"
        },
        "creator": {
          "type": "string"
        }
      }
    },
    "createPost": {
      "properties": {
        "title": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "status": {
          "type": "string"
        }
      }
    },
    "updatePost": {
      "properties": {
        "id": {
          "type": "string",
          "uniqueItems": true
        },
        "title": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "status": {
          "type": "string"
        }
      }
    },
    "getPostList": {
      "properties": {
        "items": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Post"
          }
        },
        "size": {
          "type": "number"
        },
        "currentPage": {
          "type": "number"
        },
        "total": {
          "type": "number"
        }
      }
    },
    "login":{
      "properties":{
        "username": {
          "type": "string"
        },
        "password": {
          "type": "string"
        }
      }
    },
    "SuccessResponse": {
      "properties": {
        "message": {
          "type": "string"
        },
        "code": {
          "type": "number"
        }
      }
    },
    "ErrorResponse": {
      "properties": {
        "errorMessage": {
          "type": "string"
        },
        "code": {
          "type": "number"
        }
      }
    }
  }
}
