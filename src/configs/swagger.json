{
  "openapi": "3.0.0",
  "info": {
    "title": "My API",
    "version": "1.0.0",
    "description": "My API description"
  },
  "tags": [
    {
      "name": "Users"
    },
    {
      "name": "Posts"
    }
  ],
  "components": {
    "securitySchemes": {
      "BearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "User": {
        "$ref": "#/definitions/User"
      },
      "getUserList": {
        "$ref": "#/definitions/getUserList"
      }
    }
  },
  "security": [
    {
      "BearerAuth": []
    }
  ],
  "schemes": ["http"],
  "consumes": ["application/json"],
  "produces": ["application/json"],
  "paths": {
    "/api/user/createUser": {
      "post": {
        "tags": ["Users"],
        "description": "Create new user in system",
        "parameters": [
          {
            "name": "user",
            "in": "body",
            "description": "User that we want to create",
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        ],

        "produces": ["application/json"],
        "responses": {
          "201": {
            "description": {
              "message": "Create user successfully!",
              "code": 201
            },
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/definitions/User"
                }
              }
            }
          }
        }
      }
    },
    "/api/user/getUserList": {
      "get": {
        "security": [{ "BearerAuth": [] }],
        "tags": ["Users"],
        "summary": "Get a list of users in system",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/definitions/getUserList"
                }
              }
            }
          }
        }
      }
    },
    "/api/user/login": {
      "post": {
        "tags": ["Users"],
        "description": "Login user into system and return a token",
        "parameters": [
          {
            "name": "user",
            "in": "body",
            "description": "User that we want to create",
            "schema": {
              "required": ["username", "password"],
              "properties": {
                "username": {
                  "type": "string"
                },
                "password": {
                  "type": "string"
                }
              }
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "required": ["username", "password"],
                "properties": {
                  "username": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "produces": ["application/json"],
        "responses": {
          "201": {
            "content": {
              "application/json": {
                "schema": {
                  "properties": {
                    "token": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/user/{id}": {
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": true,
          "description": "ID of user that we want to find",
          "type": "integer"
        }
      ],
      "delete": {
        "summary": "Delete user with given ID",
        "tags": ["Users"],
        "responses": {
          "200": {
            "description": "User is deleted",
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        }
      },
      "put": {
        "summary": "Update user with give ID",
        "tags": ["Users"],
        "parameters": [
          {
            "name": "user",
            "in": "body",
            "description": "User with new values of properties",
            "schema": {
              "$ref": "#/definitions/updateUser"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "User is updated",
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        }
      }
    },
    "/api/post/createPost": {
      "post": {
        "tags": ["Posts"],
        "description": "Create new post in system",
        "parameters": [
          {
            "name": "user",
            "in": "body",
            "description": "User that we want to create",
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        ],
        "produces": ["application/json"],
        "responses": {
          "201": {
            "description": {
              "message": "Create user successfully!",
              "code": 201
            },
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/definitions/User"
                }
              }
            }
          }
        }
      }
    },
    "/api/post/getPostList": {
      "get": {
        "security": [{ "BearerAuth": [] }],
        "tags": ["Posts"],
        "summary": "Get a list of posts in system",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/definitions/getUserList"
                }
              }
            }
          }
        }
      }
    }
  },
  "definitions": {
    "User": {
      "properties": {
        "id": {
          "type": "number",
          "uniqueItems": true
        },
        "username": {
          "type": "string"
        },
        "roleName": {
          "type": "string"
        },
        "status": {
          "type": "number"
        },
        "posts": {
          "type": "array"
        }
      }
    },
    "getUserList": {
      "properties": {
        "items": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/User"
          }
        },
        "size": {
          "type": "number"
        },
        "currentPage": {
          "type": "number"
        },
        "total": {
          "type": "number"
        }
      }
    },
    "Post": {
      "properties": {
        "id": {
          "type": "string",
          "uniqueItems": true
        },
        "title": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "status": {
          "type": "number"
        },
        "creator": {
          "type": "string"
        }
      }
    },
    "getPostList": {
      "properties": {
        "items": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Post"
          }
        },
        "size": {
          "type": "number"
        },
        "currentPage": {
          "type": "number"
        },
        "total": {
          "type": "number"
        }
      }
    }
  }
}
