{
  "openapi": "3.0.0",
  "info": {
    "title": "E-Box API documentation",
    "version": "1.0.2",
    "description": "E-Box's API description"
  },
  "tags": [
    {
      "name": "Users"
    },
    {
      "name": "Activities"
    },
    {
      "name": "Posts"
    }
  ],
  "components": {
    "securitySchemes": {
      "BearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "User": {
        "$ref": "#/definitions/User"
      },
      "Activity": {
        "$ref": "#/definitions/Activity"
      },
      "Post": {
        "$ref": "#/definitions/Post"
      }

    }
  },
  "security": [
    {
      "BearerAuth": []
    },
    {
      "myCookieAuth": {
        "type": "apiKey",
        "name": "refreshToken",
        "in": "cookie",
        "httpOnly": true
      }
    }
  ],
  "schemes": ["http"],
  "consumes": ["application/json"],
  "produces": ["application/json"],
  "paths": {
    "/api/user/createUser": {
      "post": {
        "security": [{ "BearerAuth": [] }],
        "tags": ["Users"],
        "summary": "Create new user in system",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/definitions/createUser"
              }
            }
          }
        },
        "produces": ["application/json"],
        "responses": {
          "201": {
            "description": {},
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/definitions/SuccessResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/post/updateUser": {
      "patch": {
        "security": [{ "BearerAuth": [] }],
        "tags": ["Users"],
        "summary": "Update an existed user in system",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/definitions/updateUser"
              }
            }
          }
        },
        "produces": ["application/json"],
        "responses": {
          "201": {
            "description": {
              "message": "Update user successfully!",
              "code": 201
            },
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/definitions/SuccessResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/user/getUserList": {
      "get": {
        "security": [{ "BearerAuth": [] }],
        "tags": ["Users"],
        "summary": "Get a list of users in system",
        "parameters": [
          {
            "name": "size",
            "in": "query",
            "description": "Size of a list of users in system",
            "schema": {
              "type": "number"
            }
          },
          {
            "name": "currentPage",
            "in": "query",
            "description": "Position of page reveals a list of users in system",
            "schema": {
              "type": "number"
            }
          },
          {
            "name": "roleName",
            "in": "query",
            "description": "Filter based on role name",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "status",
            "in": "query",
            "description": "Filter based on status",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/definitions/getUserList"
                }
              }
            }
          }
        }
      }
    },
    "/api/user/login": {
      "post": {
        "tags": ["Users"],
        "summary": "Login user into system and return a token",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/definitions/login"
              }
            }
          }
        },
        "produces": ["application/json"],
        "responses": {
          "201": {
            "content": {
              "application/json": {
                "schema": {
                  "properties": {
                    "accessToken": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/user/refreshToken": {
      "get": {
        "tags": ["Users"],
        "summary": "Send a new token with refreshToken in cookies( HttpOnly) when a current token got expired!",
        "description": "Please login first to get a refresh token",
        "produces": ["application/json"],
        "responses": {
          "201": {
            "content": {
              "application/json": {
                "schema": {
                  "properties": {
                    "accessToken": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/activity/saveActivity": {
      "post": {
        "security": [{ "BearerAuth": [] }],
        "tags": ["Activities"],
        "summary": "Save user's activity in system",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/definitions/saveActivity"
              }
            }
          }
        },
        "produces": ["application/json"],
        "responses": {
          "201": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/definitions/SuccessResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/post/createPost": {
      "post": {
        "security": [{ "BearerAuth": [] }],
        "tags": ["Posts"],
        "summary": "Create new post in system",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/definitions/createPost"
              }
            }
          }
        },
        "produces": ["application/json"],
        "responses": {
          "201": {
            "description": {
              "message": "Create post successfully!",
              "code": 201
            },
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/definitions/SuccessResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/post/updatePost": {
      "patch": {
        "security": [{ "BearerAuth": [] }],
        "tags": ["Posts"],
        "summary": "Update an existed post in system",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/definitions/updatePost"
              }
            }
          }
        },
        "produces": ["application/json"],
        "responses": {
          "201": {
            "description": {
              "message": "Update post successfully!",
              "code": 201
            },
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/definitions/SuccessResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/post/getPostList": {
      "get": {
        "security": [{ "BearerAuth": [] }],
        "tags": ["Posts"],
        "summary": "Get a list of posts in system",
        "parameters": [
          {
            "name": "size",
            "in": "query",
            "description": "Size of a list of posts in system",
            "schema": {
              "type": "number"
            }
          },
          {
            "name": "currentPage",
            "in": "query",
            "description": "Position of page reveals a list of posts in system",
            "schema": {
              "type": "number"
            }
          },
          {
            "name": "status",
            "in": "query",
            "description": "Filter based on status",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/definitions/getPostList"
                }
              }
            }
          }
        }
      }
    },
    "/api/post/createCategory": {
      "post": {
        "security": [{ "BearerAuth": [] }],
        "tags": ["Posts"],
        "summary": "Create new post category in system",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/definitions/createCategory"
              }
            }
          }
        },
        "produces": ["application/json"],
        "responses": {
          "201": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/definitions/SuccessResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/post/getCategoryList": {
      "get": {
        "security": [{ "BearerAuth": [] }],
        "tags": ["Posts"],
        "summary": "Get a list of post categories in system",
        "produces": ["application/json"],
        "responses": {
          "201": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/definitions/getCategoryList"
                }
              }
            }
          }
        }
      }
    }
    
  },
  "definitions": {
    "User": {
      "properties": {
        "id": {
          "type": "number",
          "uniqueItems": true
        },
        "username": {
          "type": "string"
        },
        "roleName": {
          "type": "string"
        },
        "createdAt": {
          "type": "string"
        },
        "updatedAt": {
          "type": "string"
        },
        "status": {
          "type": "number"
        },
        "posts": {
          "type": "array",
          "default": []
        },
        "activities": {
          "type": "array",
          "default": []
        }
      }
    },
    "createUser": {
      "properties": {
        "username": {
          "type": "string"
        },
        "password": {
          "type": "string"
        },
        "roleName": {
          "type": "string"
        }
      }
    },
    "updateUser": {
      "properties": {
        "username": {
          "type": "string"
        },
        "roleName": {
          "type": "string"
        },
        "status": {
          "type": "string"
        }
      }
    },
    "getUserList": {
      "properties": {
        "items": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/User"
          }
        },
        "size": {
          "type": "number"
        },
        "currentPage": {
          "type": "number"
        },
        "total": {
          "type": "number"
        }
      }
    },
    "Activity": {
      "properties": {
        "id": {
          "type": "string",
          "uniqueItems": true
        },
        "title": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "creator": {
          "type": "string",
          "uniqueItems": true
        },
        "createdAt": {
          "type": "string"
        },
        "updatedAt": {
          "type": "string"
        }
      }
    },
    "saveActivity": {
      "properties": {
        "title": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "creator": {
          "type": "string",
          "uniqueItems": true
        }
      }
    },
    "Post": {
      "properties": {
        "id": {
          "type": "string",
          "uniqueItems": true
        },
        "title": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "status": {
          "type": "string"
        },
        "creator": {
          "type": "string"
        },
        "createdAt": {
          "type": "string",
          "uniqueItems": true
        },
        "updatedAt": {
          "type": "string"
        },
        "category":{
          "type": "string",
          "uniqueItems": true
        }
      }
    },
    "createPost": {
      "properties": {
        "title": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "status": {
          "type": "string"
        }
      }
    },
    "updatePost": {
      "properties": {
        "id": {
          "type": "string",
          "uniqueItems": true
        },
        "title": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "status": {
          "type": "string"
        }
      }
    },
    "getPostList": {
      "properties": {
        "items": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Post"
          }
        },
        "size": {
          "type": "number"
        },
        "currentPage": {
          "type": "number"
        },
        "total": {
          "type": "number"
        }
      }
    },
    "Post-Category": {
      "properties": {
        "id": {
          "type": "string",
          "uniqueItems": true
        },
        "name": {
          "type": "string"
        },
        "status": {
          "type": "number"
        },
        "createdAt": {
          "type": "string"
        },
        "updatedAt": {
          "type": "string"
        }
      }
    },
    "createCategory": {
      "properties": {
        "name": {
          "type": "string"
        }
      }
    },
    "getCategoryList": {
      "properties": {
        "items": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Post-Category"
          }
        }
      }
    },
    "login": {
      "properties": {
        "username": {
          "type": "string"
        },
        "password": {
          "type": "string"
        }
      }
    },
    "SuccessResponse": {
      "properties": {
        "message": {
          "type": "string"
        },
        "code": {
          "type": "number",
          "default": 201
        }
      }
    },
    "ErrorResponse": {
      "properties": {
        "errorMessage": {
          "type": "string"
        },
        "code": {
          "type": "number"
        }
      }
    }
  }
}
